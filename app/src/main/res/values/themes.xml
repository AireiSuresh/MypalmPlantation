<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MypalmPlantation" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="o_mr1">never</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="font">@font/montserrat</item>
        <item name="android:colorPrimaryDark">@color/mirage</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="maxLines">1</item>
    </style>

    <style name="Theme.MypalmPlantation" parent="Base.Theme.MypalmPlantation" />

    <style name="AppMaterialDatePicker" parent="@style/ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorPrimary">@color/mirage</item>
    </style>

    <style name="CheckBoxStyle.BorderWhite" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <!-- Remove default padding -->
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>

        <!-- Custom check mark color -->
        <item name="android:buttonTint">@color/checkbox_tint</item>

        <!-- Background with border -->
        <item name="android:background">@drawable/bg_checkbox_border</item>

        <!-- Optional: Custom check mark drawable -->
        <item name="android:button">@drawable/custom_checkbox_selector</item>
    </style>

    <style name="AppMaterialTimePicker" parent="ThemeOverlay.MaterialComponents.TimePicker">
        <item name="colorPrimary">@color/mirage</item>
        <item name="colorPrimaryVariant">@color/mirage</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="TextLayoutStyleWhite" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/jewel</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textCursorDrawable">@color/jewel</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/common_form_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/common_form_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/common_form_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/common_form_radius</item>
        <item name="boxStrokeColor">@color/jewel</item>
        <item name="boxStrokeWidth">@dimen/btn_stroke_width</item>
        <item name="boxStrokeErrorColor">@color/flame_pea</item>
        <item name="counterOverflowTextColor">@color/flame_pea</item>
        <item name="cursorColor">@color/jewel</item>
        <item name="errorEnabled">true</item>
        <item name="hintEnabled">false</item>
        <item name="endIconTint">@color/jewel</item>
        <item name="errorIconTint">@color/flame_pea</item>
        <item name="errorTextColor">@color/flame_pea</item>
        <item name="hintTextColor">@color/jewel</item>
    </style>

    <style name="TextInputStyleWhite" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/jewel</item>
        <item name="hintTextColor">@color/jewel</item>
        <item name="android:maxLength">25</item>
        <item name="android:maxLines">1</item>
        <item name="android:background">@drawable/et_bg_fill_white</item>
        <item name="android:backgroundTint">@color/gum_leaf</item>
        <item name="android:textColor">@color/jewel</item>
        <item name="android:textColorHint">@color/jewel</item>
        <item name="android:textColorHighlight">@color/white_lite_200</item>
        <item name="android:textSize">14sp</item>

    </style>

    <style name="ButtonFill" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="android:background">@drawable/btn_bg_green_fill</item>
        <item name="backgroundTint">@null</item>
    </style>
    <style name="ButtonLine" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>

        <item name="android:background">@drawable/btn_bg_green_line</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="AddLineButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:layout_marginVertical">8dp</item>
        <item name="android:paddingHorizontal">18dp</item>
        <item name="android:paddingVertical">4dp</item>
        <item name="android:background">@drawable/btn_bg_orange_lines</item>
        <item name="icon">@drawable/ic_add</item>
        <item name="iconPadding">0dp</item>
        <item name="backgroundTint">@null</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="FormEditTextLine" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/et_bg_line_white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingHorizontal">14dp</item>
        <item name="android:paddingVertical">16dp</item>
    </style>

    <style name="FormEditTextFill" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/et_bg_fill_white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:hint">@string/entry_hint</item>
        <item name="android:paddingHorizontal">14dp</item>
        <item name="android:paddingVertical">14dp</item>
        <item name="android:textColorHint">#494949</item>
    </style>

    <style name="HeaderCell">
        <item name="android:textStyle">bold</item>
        <item name="android:padding">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_cell_border</item>
        <item name="android:layout_margin">4dp</item>
    </style>


    <string name="entry_hint">Entry</string>
</resources>