<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/alabaster_lite">
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@color/alabaster_lite" />
            <corners android:radius="@dimen/btn_radius" />
        </shape>
    </item>
    <!-- Existing shape design inside item -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/btn_radius" />

            <stroke
                android:width="@dimen/btn_stroke_width"
                android:color="@color/white" />

            <!-- Optional: background color for the button -->
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
</ripple>