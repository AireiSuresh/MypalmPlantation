<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/silver"> <!-- Color of the ripple effect -->
    <!-- Define the background shape -->
    <item android:id="@android:id/mask">
        <shape >
            <solid android:color="@color/alabaster_lite" />
            <stroke
                android:width="@dimen/btn_stroke_width"
                android:color="@color/flame_pea" />
            <corners android:radius="@dimen/btn_radius" />
        </shape>
    </item>
    <item>
        <shape >
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="@dimen/btn_stroke_width"
                android:color="@color/flame_pea" />
            <corners android:radius="@dimen/btn_radius" />
        </shape>
    </item>
</ripple>